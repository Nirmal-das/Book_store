{
    "compilerOptions": {
      "module": "NodeNext",
      "target": "ESNext",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "allowJs": true,
      "resolveJsonModule": true,
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*"]
      }
    },
    "ts-node": {
        "esm": true,
        "experimentalSpecifiers": true
    },
    "include": [
      "src/**/*.ts",
      "index.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  